extends layout

block content
  div(class="row justify-content-md-center")
    div(class="col-md-12")
      div(class="card text-center")
        div(class="card-header" style="background-color:#6c757d;") 
          h5(class='text-light')  <i class="fa fa-cart-arrow-down" style="font-size:25px"></i>สินค้าในตะกร้า
        div(class="card-body text-center")
          form(action='/books/select',method='post' )
            input(type="hidden" class="tokenEmail" name="tokenEmail" value="5")
            table(id="showCart" align='center' )
              thead
                tr
                  th รหัสสินค้า
                  th ชื่อสินค้า
                  th ราคา
                  th จำนวน 
                  th รวมเป็นเงิน
                  
              <tbody>
              for item in data
                tr(id='selectId'+item._id style="display:none")
                  td(id="selectIsbn"+item._id ) #{item.isbn}
                  td(id="selectTitle"+item._id ) #{item.title}
                  td(id="selectPrice"+item._id ) #{item.price}
                  td(id="selectAmount"+item._id ) 0
                  input(type="hidden" id="hideSelectAmount"+item._id name="selectAmount"+item._id )
                  td(class="price" id="selectSum"+item._id ) 0
                  input(type="hidden" id="hideSelectSum"+item._id name="selectSum"+item._id )
                  td(style="border:none;")
                    button(class="btn btn-outline-danger" onclick='cancel(this)'  type="button" newId=""+item._id) ยกเลิกสินค้า
              tr(id="rowTotal")
                td(colspan="4") รวมเป็นเงินทั้งสิน
                td(id="total") บาท
              tr(id="rowText")
                td(colspan="5") ยังไม่ได้เลือกสินค้า 
              tr
                td(colspan="4" style="border:none")
                td(style="border:none;")
                  button(class="btn btn-outline-success btn-block" id="selectBooks" style="margin-top:.5rem;" ) 
                    i(class="fa fa-money") 
                    span ยืนยันการเลือกสินค้า     
              
              </tbody>
            